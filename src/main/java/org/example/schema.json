{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Message Core Schema",
  "description": "Core schema for structured messages including specific types for structured content",
  "type": "object",
  "properties": {
    "thread": {
      "type": "object",
      "properties": {
        "title": {"type": "string"},
        "participants": {
          "type": "array",
          "items": {"type": "string"}
        },
        "date": {"type": "string", "format": "date-time"},
        "categories": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "required": ["title", "participants", "date"]
    },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": {"type": "string"},
          "metadata": {
            "type": "object",
            "properties": {
              "timestamp": {"type": "string", "format": "date-time"},
              "structuredContent": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": {"type": "string"},
                    "value": {
                      "oneOf": [
                        {
                          "type": "boolean",
                          "description": "Boolean for checkboxes and binary questions"
                        },
                        {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "description": "Array of strings for multiple choice questions"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "start": {"type": "string", "format": "date-time"},
                            "end": {"type": "string", "format": "date-time"}
                          },
                          "description": "Object with start and end datetime for time slot selector"
                        },
                        {
                          "type": "string",
                          "description": "Color value (e.g., '#FFFFFF' or 'red')"
                        }
                      ]
                    }
                  },
                  "required": ["type", "value"]
                }
              }
            },
            "required": ["timestamp"]
          }
        },
        "required": ["text", "metadata"]
      }
    }
  },
  "required": ["thread", "messages"]
}